{
    //manifest spec: http://developer.chrome.com/extensions/manifest.html
    //required
    "name": "Clink",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": [
        "tabs",
        "activeTab"
    ],

    //recommended
    "description": "Enable user to share and search link with tag query",
    "icons": {
        "19": "images/icon_19.png",
        "38": "images/icon_38.png",
        "128": "images/icon_128.png"
    },

    //required
    "browser_action": {
        "default_title": "browser_action: default_title",
        "default_icon": {
            "19": "images/icon_19.png",
            "38": "images/icon_38.png"
        },
        "default_popup": "popup/popup.html"
    },

    //additional
//    "options_page": "html/options.html",
//    "homepage_url": "http://yourdomainhere.com/"
    
    //Dependencies
    "content_scripts": [{
        "js": ["popup/popup.js"],
        "matches": ["*://*/*"],
        "run_at": "document_end",
        "all_frames": true
    }],

    "web_accessible_resources": ["js/*.js", "html/*.html", "css/*.css"]
}
